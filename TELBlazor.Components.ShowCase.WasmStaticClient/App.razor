<Router AppAssembly="@typeof(App).Assembly"
        AdditionalAssemblies="new[]
            {
                typeof(TELBlazor.Components.ShowCase.Shared._Imports).Assembly
            }
        ">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(TELBlazor.Components.ShowCase.Shared.Layouts.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(TELBlazor.Components.ShowCase.Shared.Layouts.MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
